<% if user_signed_in? %>
<%= link_to "My Notebooks", root_path, class: "my-nav-notebooks d-flex flex-column justify-content-center text-center" %>
<%= link_to(root_path, class: "my-nav-user d-flex flex-column justify-content-center text-center") do %>
	<div class="block"><%=current_user[:username]%> <i class="material-icons align-middle">arrow_drop_down</i></div>
<%  end %>
<%= link_to(root_path, class: "my-nav-mail d-flex flex-column justify-content-center text-center") do %>
	<center><i class="material-icons align-middle">mail</i></center>
<%  end %>
<%= link_to(root_path, class: "my-nav-options d-flex flex-column justify-content-center text-center") do %>
	<center><i class="material-icons align-middle">more_horiz</i></center>
<%  end %>
<% else %>
<%= link_to "Login", new_user_session_path, class: "my-nav-login d-flex flex-column justify-content-center text-center" %>
<%= link_to "Sign Up", new_user_registration_path, class: "my-nav-signup d-flex flex-column justify-content-center text-center" %>
<%= link_to(root_path, class: "my-nav-options d-flex flex-column justify-content-center text-center") do %>
	<center><i class="material-icons align-middle">more_horiz</i></center>
<%  end %>
<% end %>