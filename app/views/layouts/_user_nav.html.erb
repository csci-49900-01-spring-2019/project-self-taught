<% if user_signed_in? %>
	<div class="dropdown">
		<%= link_to(root_path, {class: "my-nav-user d-flex flex-column justify-content-center text-center", 'data-toggle': "dropdown", 'aria-haspopup': "true", 'aria-expanded': "false"}) do %>
			<div class="block"><%=current_user[:username]%> <i class="material-icons align-middle">arrow_drop_down</i></div>
		<% end %>
		<div class="dropdown-menu">
			<%= link_to "Notebooks", user_notebooks_path(current_user[:username]), { class: "dropdown-item" } %>
			<%= link_to "Notes", user_notes_path(current_user[:username]), { class: "dropdown-item" } %>
			<%= link_to "Tests", user_tests_path(current_user[:username]), { class: "dropdown-item" } %>
			<%= link_to "Profile", user_notebooks_path(current_user[:username]), { class: "dropdown-item" } %>
			<%= link_to "Sign Out", destroy_user_session_path, { class: "dropdown-item", method: :delete } %>
		</div>
	</div>
<% else %>
	<%= link_to "Login", new_user_session_path, class: "my-nav-login d-flex flex-column justify-content-center text-center" %>
	<%= link_to "Sign Up", new_user_registration_path, class: "my-nav-signup d-flex flex-column justify-content-center text-center" %>
<% end %>

<div class="dropdown">
	<%= link_to(root_path, {class: "my-nav-options d-flex flex-column justify-content-center text-center", 'data-toggle': "dropdown", 'aria-haspopup': "true", 'aria-expanded': "false"}) do %>
		<center><i class="material-icons align-middle">more_horiz</i></center>
	<% end %>
	<div class="dropdown-menu">
		<%= link_to "About us", destroy_user_session_path, { class: "dropdown-item", method: :delete } %>
		<%= link_to "EULA", destroy_user_session_path, { class: "dropdown-item", method: :get } %>
		<%= link_to "Android App", destroy_user_session_path, { class: "dropdown-item", method: :delete } %>
		<%= link_to "Developers", destroy_user_session_path, { class: "dropdown-item", method: :delete } %>
		<%= link_to "Support", destroy_user_session_path, { class: "dropdown-item", method: :delete } %>
	</div>
</div>